/* 
 * .env file template - Create this file in your root directory
 * 
# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=ludeb
DB_PORT=3306
DB_SSL=false

# Security Settings
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_TIME_WINDOW=900
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION=1800

# Session Configuration
SESSION_LIFETIME=28800
SESSION_REGENERATE=300
MAX_SESSIONS=5
SESSION_SECURE=true
SESSION_IP_VALIDATION=true

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_HISTORY_COUNT=12
PASSWORD_EXPIRY_DAYS=90
PASSWORD_HASH_COST=12

# CSRF Protection
CSRF_TOKEN_LIFETIME=3600

# Logging
SECURITY_LOGGING=true
SECURITY_LOG_FILE=logs/security.log
LOG_LEVEL=info
LOG_MAX_SIZE=10MB
LOG_ROTATE_FILES=10
LOG_SUCCESS=true
LOG_FAILURES=true
LOG_IP_CHANGES=true

# IP Filtering
IP_FILTERING_ENABLED=false
IP_WHITELIST_ONLY=false
IP_WHITELIST=127.0.0.1,192.168.1.0/24
IP_BLACKLIST=
AUTO_BLACKLIST=true
AUTO_BLACKLIST_THRESHOLD=20
AUTO_BLACKLIST_DURATION=86400

# Geo Blocking
GEO_BLOCKING=false
ALLOWED_COUNTRIES=US,CA,GB,AU
BLOCKED_COUNTRIES=

# Device Trust
DEVICE_TRUST=false
DEVICE_TRUST_DURATION=2592000
MAX_TRUSTED_DEVICES=10

# Two-Factor Authentication
2FA_ENABLED=false
2FA_REQUIRED_ROLES=System Admin
2FA_ISSUER=Results Management System
2FA_CODE_LENGTH=6
2FA_TIME_WINDOW=30
2FA_BACKUP_CODES=10
2FA_BACKUP_LENGTH=8

# Security Headers
SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com;
HSTS_POLICY=max-age=31536000; includeSubDomains; preload

# Monitoring and Alerts
MONITORING_ENABLED=true
ALERT_EMAIL=security@yourdomain.com
ALERT_FAILED_LOGINS=10
ALERT_NEW_IPS=50
ALERT_LOCKOUTS=5
ALERT_SUSPICIOUS=3
REALTIME_ALERTS=false
DAILY_REPORTS=true

# Maintenance
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=daily
RETAIN_LOGS_DAYS=90
RETAIN_ATTEMPTS_DAYS=7
RETAIN_SESSIONS_DAYS=30
VACUUM_DATABASE=true

# API Security
API_RATE_LIMIT=100
API_AUTH_REQUIRED=true
API_ALLOWED_METHODS=GET,POST
API_CORS_ENABLED=false
API_CORS_ORIGINS=
API_CORS_METHODS=GET,POST
API_CORS_HEADERS=Content-Type,Authorization

# Environment
DEBUG_MODE=false
DEVELOPMENT_IPS=127.0.0.1
SSL_REQUIRED=true
TIMEZONE=UTC

# Advanced Features
HONEYPOT_ENABLED=true
BOT_DETECTION=true
CAPTCHA_ENABLED=false
CAPTCHA_PROVIDER=recaptcha
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=
CAPTCHA_THRESHOLD=3
ML_DETECTION=false
ML_ANOMALY=false
ML_BEHAVIORAL=false
*/